<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Bank "<%= bank.name %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik bank</label>
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="name"
                    value="<%= bank.name %>"
                    placeholder="Masukan Nama Pemilik Bank"
                  />
                </div>

                <div class="form-group">
                  <label for="name">Nama Bank</label>
                  <select
                  class=
                  "form-control select2 selection--single"
                  style="width: 100%"
                  name="bankName"
                  required
                >
                  <option selected="selected">Pilih Bank</option>
                  <option value="BCA"
                  <% if(bank.bankName === "BCA") { %> 
                  selected
                  <% } %> 
                  >
                    BCA
                  </option>
                  <option value="BNI"  <% if(bank.bankName === "BNI") { %> 
                    selected
                    <% } %> >BNI</option>
                  <option value="BSI"  <% if(bank.bankName === "BSI") { %> 
                    selected
                    <% } %> >BSI</option>
                  <option value="BRI"  <% if(bank.bankName === "BRI") { %> 
                    selected
                    <% } %> >BRI</option>
                  <option value="MANDIRI"  <% if(bank.bankName === "MANDIRI") { %> 
                    selected
                    <% } %> >MANDIRI</option>
                  <!-- <option>Washington</option> -->
                </select>
                  <!-- <label for="nameBank">Nama Bank</label>
                  <input
                    type="text"
                    name="nameBank"
                    class="form-control"
                    id="nameBank"
                    value="<%= bank.nameBank %>"
                    placeholder="Masukan Nama Bank"
                  /> -->
                </div>

                <div class="form-group">
                  <label for="noRekening">Nomor rekening</label>
                  <input
                    type="number"
                    name="noRekening"
                    class="form-control"
                    id="noRekening"
                    value="<%= bank.noRekening %>"
                    placeholder="Masukan No Rekening"
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
